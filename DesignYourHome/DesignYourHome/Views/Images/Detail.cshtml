@model DesignYourHome.Models.ImageViewModels.AddImageViewModel


@{
    ViewData["Title"] = "Details";
}

<h2 class="body-content-heading">Save to Ideaboard</h2>
<hr>
<div class="row">
    <form asp-action="Save">
        <input type="hidden" asp-for="Image.ImageId" />
        <input type="hidden" asp-for="Image.Source" />
        <div class="col-md-6 center">
            <img src="@Model.Image.Source">
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-12 dropdown">
                    @Html.DropDownList(
                        "chosenIdeaboard",
                        @Model.IdeaboardId,
                        new
                        {
                            @name = "Ideaboard.IdeaboardId"
                        }
                    )
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 selectBox">
                   
                    <div class="form-group btnGroup">
                        <input type="submit" value="Save" class="btn btn-default purpleBtn" />
                        <a class="btn btn-default" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
    </form>
</div>
</div>
<div>
</div>